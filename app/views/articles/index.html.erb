
<article id="articlesWrap">
	<header class="articles-header">
		<h3 class="page-int-title">Listing Articles</h3>
	</header>
	<section class="articles-body">
		<% @articles.each do |article| %>
			<div class="article-item">
				<h3 class="article-title"><%= article.title %></h3>
				<p class="article-content"><%= article.text %></p>
				<div class="article-cta">
					<%= link_to 'Show', article_path(article), :class => "btn" %>
					<%= link_to 'Edit', edit_article_path(article), :class => "btn" %>
					<%= link_to 'Destroy', article_path(article),
						:class => "btn",
						method: :delete,
						data: {
							confirm: 'Are you sure?'
						}
					%>
				</div>
			</div>
		<% end %>
	</section>
</article>