	</div>
	<div class="form-group">
		<%= f.label :text, :class => "control-label" %>
		<%= f.text_area :text, :class => "form-control" %>
	</div>
	<div class="form-group">
		<%= f.submit :class => "btn btn-primary btn-lg" %>
	</div>

<% end %>